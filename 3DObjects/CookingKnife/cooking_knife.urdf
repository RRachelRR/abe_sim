<?xml version="1.0"?>
<robot name="masher">
  <link name="handle">
    <inertial>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <mass value="0.01"/>
        <inertia ixx="4.4e-5" ixy="0" ixz="0" iyy="0" iyz="0" izz="4.4e-5"/>
    </inertial>
    <visual>
      <geometry>
        <mesh filename="handle.obj"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="handle.obj"/>
      </geometry>
      <surface>
           <bounce restitution_coefficient = "0.1"/>
      </surface>
    </collision>
  </link>
  <link name="blade">
    <inertial>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <mass value="0.01"/>
        <inertia ixx="1.9e-5" ixy="0" ixz="0" iyy="6.8e-6" iyz="0" izz="1.2e-5"/>
    </inertial>
    <visual>
      <geometry>
        <mesh filename="blade.obj"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="blade.obj"/>
      </geometry>
      <surface>
           <bounce restitution_coefficient = "0.1"/>
      </surface>
    </collision>
  </link>
  <joint name="handle_to_blade" type="fixed">
    <parent link="handle"/>
    <child link="blade"/>
    <origin rpy="0 0 0" xyz="0.272 0 -0.02"/>
  </joint>
</robot>

